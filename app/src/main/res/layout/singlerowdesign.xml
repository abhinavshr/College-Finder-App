<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/collegeImage"
        android:layout_width="384dp"
        android:layout_height="339dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProgram"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/tvCollegeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College Name"
        android:textColor="@color/Orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginStart="10dp"
        android:textSize="40sp"
        />
    <TextView
        android:id="@+id/tvCollegeLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College Location"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvCollegeName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="100dp"/>
    <TextView
        android:id="@+id/tvCollegeDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College District"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tvCollegeLocation"
        app:layout_constraintTop_toBottomOf="@id/tvCollegeName"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"/>
    <TextView
        android:id="@+id/tvCollegeWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College Website"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvCollegeLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tvCollegeContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College Contact"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvCollegeWeb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="100dp"
        />
    <TextView
        android:id="@+id/tvCollegePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College Phone"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tvCollegeContact"
        app:layout_constraintTop_toBottomOf="@id/tvCollegeWeb"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"/>
    <TextView
        android:id="@+id/tvCollegeMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College Mail"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvCollegeContact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tvProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvCollegeMail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>